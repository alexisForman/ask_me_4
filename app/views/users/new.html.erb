<h1>Sign up</h1>

<% if @user.errors.any? %>
    <div style="color: red">
        <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited your user profile from being created:
        </h2>

        <ul>
            <% @user.errors.each do |error| %>
        <li>
            <%= error.full_message %>
        </li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: @user) do |form| %>
    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.text_field :password %>
    </div>

    <div>
        <%= form.submit "Join the Fun!" %>
    </div>

<% end %>
